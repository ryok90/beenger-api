{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
  },
  "include": ["src"],
  "exclude": ["tests"]
}
