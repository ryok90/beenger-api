{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "incremental": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["tests"]
}
